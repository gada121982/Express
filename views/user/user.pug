extends ../layouts/common 

block content  
    h1
        span.mr-3 Users
        a.btn.btn-primary(href="/user/create") New
        a.btn.btn-primary(href="/products" ,style="margin : 5px") Product
    .d-flex.align-items-center
       
        
        form.ml-auto(action="/user/search", method="GET", class="d-flex")
            input(type="text" , name="q" , class="form-control")
            button(class="btn btn-primary ml-2") Search 

    table.table
        tr
            th avatar
            th Name
            th Phone
            th Actions
        
        each user in users
            tr  
                td
                    img(src=user.avatar, width="64")
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href='/user/'+ user.id) View